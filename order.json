---
swagger: "2.0"
info:
    version: "1.0"
    title: "Store API"
host: "localhost:5555"
basepath: "/ordeapi"
schemes:
- "http"
consumes:
- "/application/json"
produces:
- "/application/json"
paths:
    /product/{pid}:
    get:
        tags: ["product"]
        operatioId: "getProductById"
        parameters: []
        responses:
            200:
                description: "OK"
                schema:
                    $ref: "#/definitions/product"
            401:
                description: "Access Denied"
    /products:
    get:
        tags: ["product"]
        operatioId: "getAllProducts"
        parameters: []
        repponse:
            200:
                description: "OK"
                schema:
                    $ref: "#/definitions/product"
            401:
                description: "Access Denied"
definitions:
    products:
        required:
        - "products"
        properties:
        prodcuts:
        type: "array"
        items:
            $ref: "#/definitions/product"
    product:
        required:
        - "pid"
        - "price"
        - "productName"
        - "status"
        properties:
            price:
                type: "number"
                format: "double"
            pid:
                type: "number"
                format: "double"
            productName:
                type: "number"
                format: "double"
            status:
                type: "number"
                format: "double"
    orderResponse:
        required:
        - "status"
        properties:
            status:
                type: "string"
    order:
        required:
        - "customerId"
        - "orderId"
        - "productId"
        - "quantity"
        properties:
            customerId:
                type: "sting"
            orderId:
                type: "sting"
            quantity:
                type: "integer"
                format: "int32"
            productId:
                type: "sting"